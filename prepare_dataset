#!/bin/bash

mkdir test_service training_services
cd test_service
awk -F, '{print > $3}' ../test.data
for file in *; 
	do
	{
 		mv $file $file.data;
		cp ../test.names $file.names 
	}
	done

cd ..
cd training_services
awk -F, '{print > $3}' ../training.data
for file in *;
        do
        {
                mv $file $file.data;
                cp ../test.names $file.names
        }
        done
